//- Path: views/pages/incomes/index.pug
extends ../../layouts/default.pug

block main
  h1 Quản lý thu nhập
  .card.card-custom.mt-4
    .card-body
      h5.card-title Thêm khoản thu nhập mới
      form(action="/incomes/add", method="POST")
        .mb-3
          label(for="amount", class="form-label") Số tiền
          input(type="number", id="amount", name="amount", class="form-control", placeholder="Ví dụ: 500000", required)
        .mb-3
          label(for="description", class="form-label") Mô tả
          input(type="text", id="description", name="description", class="form-control", placeholder="Ví dụ: Lương tháng 10")
        button(type="submit", class="btn btn-primary") Thêm